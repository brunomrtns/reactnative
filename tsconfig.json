{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./app/types"] // Incluindo os tipos personalizados
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/types/**/*.d.ts", // Incluindo o diret√≥rio dos tipos
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/_layout.js"
  ]
}
